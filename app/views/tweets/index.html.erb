<% if current_user%>
  <%= render 'tweets/form', tweet: @tweet %>
<% end %>

<div class="row">
  <% @tweets.reverse.each do |tweet| %>
    <div class="col-sm-12 col-md-12">
          <h3><%= tweet.user %></h3>
          <%= image_tag (tweet.user.image_url), class:"img_size" if tweet.user.image_url.present?%>
          <h3><%= tweet.content %></h3>
          <%= link_to 'like' , new_like_path, method: :post , class: "far fa-heart"%>
          <h3><%= tweet.likes_count %></h3>
          <%= link_to 'retweet' , new_retweet_path, method: :post , class: "fas fa-retweet"%>
          <h3><%= tweet.retweets_count %></h3>
          <small><%= time_ago_in_words(tweet.created_at) %> ago</small>
          <% if current_user %>
           <p> 
           <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-warning" %> 
           <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
          <% else %>
            <%= link_to 'Show', tweet, class: "btn btn-primary" %> 
          <% end %>

    </div>
  <% end %>
</div>


<br>

<%= paginate @tweets %>